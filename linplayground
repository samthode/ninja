description: Ubuntu Box for Programming

heat_template_version: '2016-10-14'

resources:

  network_0:
    properties:
      admin_state_up: true
      name: jump_network_0
      shared: false
    type: OS::Neutron::Net

  subnet_0:
    properties:
      allocation_pools:
      - end: 10.100.0.250
        start: 10.100.0.200
      cidr: 10.100.0.0/24
      dns_nameservers: [10.50.255.254]
      enable_dhcp: true
      gateway_ip: 10.100.0.254
      host_routes: []
      ip_version: 4
      name: jump_subnet_0
      network_id: {get_resource: network_0}
    type: OS::Neutron::Subnet

  external_router:
    type: OS::Neutron::Router
    properties: 
      name: jump_router
      external_gateway_info: 
        network: public

  external_router_interface_0:
    type: OS::Neutron::RouterInterface
    properties: 
      router_id: { get_resource: external_router }
      subnet_id: { get_resource: subnet_0 }

  stx_sec:
    type: OS::Neutron::SecurityGroup
    properties:
        name: stx_group
        rules:
            - remote_ip_prefix: 10.0.0.0/8
              protocol: icmp
            - remote_ip_prefix: 10.0.0.0/8
              protocol: tcp
              port_range_min: 1
              port_range_max: 65535

  float_ip:
    type: OS::Neutron::FloatingIP
    depends_on: external_router
    properties:
      floating_network: public
      
  float_port:
    type: OS::Neutron::Port
    properties:
      network_id: { get_resource: network_0 }
      security_groups:
        - { get_resource: stx_sec }
      fixed_ips:
      - subnet_id: { get_resource: subnet_0 }
        ip_address: 10.100.0.50     

  float_ip_assoc:
    type: OS::Neutron::FloatingIPAssociation
    properties:
      floatingip_id: { get_resource: float_ip }
      port_id: { get_resource: float_port }
      
  Playground:
    properties:
      diskConfig: AUTO
      flavor: disk.mega
      image: Ubuntu 16.04
      networks:
      - port: {get_resource: float_port }
      user_data: |
          #!/bin/bash
          #User accounts
          useradd root -m -U -s /bin/bash
          usermod -aG sudo root
          sed -i 's/PasswordAuthentication no/PasswordAuthentication yes/' /etc/ssh/sshd_config
          echo "root:password" | chpasswd
          sudo apt-get update
          reboot
      user_data_format: RAW
    type: OS::Nova::Server  
