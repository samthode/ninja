description: Ubuntu Box for How to be Ninja

heat_template_version: '2016-10-14'

resources:

  network_0:
    properties:
      admin_state_up: true
      name: jump_network_0
      shared: false
    type: OS::Neutron::Net

  subnet_0:
    properties:
      allocation_pools:
      - end: 10.100.0.250
        start: 10.100.0.200
      cidr: 10.100.0.0/24
      dns_nameservers: [10.50.255.254]
      enable_dhcp: true
      gateway_ip: 10.100.0.254
      host_routes: []
      ip_version: 4
      name: jump_subnet_0
      network_id: {get_resource: network_0}
    type: OS::Neutron::Subnet

  external_router:
    type: OS::Neutron::Router
    properties: 
      name: jump_router
      external_gateway_info: 
        network: public

  external_router_interface_0:
    type: OS::Neutron::RouterInterface
    properties: 
      router_id: { get_resource: external_router }
      subnet_id: { get_resource: subnet_0 }

  stx_sec:
    type: OS::Neutron::SecurityGroup
    properties:
        name: stx_group
        rules:
            - remote_ip_prefix: 10.0.0.0/8
              protocol: icmp
            - remote_ip_prefix: 10.0.0.0/8
              protocol: tcp
              port_range_min: 1
              port_range_max: 65535

  float_ip:
    type: OS::Neutron::FloatingIP
    depends_on: external_router
    properties:
      floating_network: public
      
  float_port:
    type: OS::Neutron::Port
    properties:
      network_id: { get_resource: network_0 }
      security_groups:
        - { get_resource: stx_sec }
      fixed_ips:
      - subnet_id: { get_resource: subnet_0 }
        ip_address: 10.100.0.50     

  float_ip_assoc:
    type: OS::Neutron::FloatingIPAssociation
    properties:
      floatingip_id: { get_resource: float_ip }
      port_id: { get_resource: float_port }
      
  Playground:
    properties:
      diskConfig: AUTO
      flavor: disk.mega
      image: Ubuntu 16.04
      networks:
      - port: {get_resource: float_port }
      user_data: |
          #!/bin/bash
          #User accounts
          useradd gr0k -m -U -s /bin/bash
          usermod -aG sudo gr0k
          echo "gr0k:password" | chpasswd
          echo 'Acquire::http::proxy"http://pkg-cache.bbh.cyberschool.army.mil:3142";' > /etc/apt/apt.conf.d/02proxy
          apt-get update -y
          apt-get upgrade -y
          apt-get install -y ubuntu-desktop
          apt-get install -y gcc
          apt-get install -y gdb
          apt-get install -y gedit-plugins
          apt-get install -y wget
          
          mkdir /home/gr0k/stack_warmup
          wget -P  /home/gr0k/stack_warmup https://git.cybbh.space/samuel.c.thode/ninja/raw/master/Insecure/stack_warmup/stack{1..5}.c

          mkdir /home/gr0k/abo
          wget -P /home/gr0k/abo https://git.cybbh.space/samuel.c.thode/ninja/raw/master/Insecure/abo/abo{1..10}.c
          
          mkdir /home/gr0k/format_strings
          wget -P /home/gr0k/format_strings https://git.cybbh.space/samuel.c.thode/ninja/raw/master/Insecure/format_strings/fs{1..5}.c
          
          mkdir /home/gr0k/signals
          wget -P /home/gr0k/signals https://git.cybbh.space/samuel.c.thode/ninja/raw/master/Insecure/signals/s{1..4}.c
          
          mkdir /home/gr0k/esoteric
          wget -P /home/gr0k/esoteric https://git.cybbh.space/samuel.c.thode/ninja/raw/master/Insecure/esoteric/e{1..5}.c
          
          mkdir /home/gr0k/stackguarded
          wget -P /home/gr0k/stackguarded https://git.cybbh.space/samuel.c.thode/ninja/raw/master/Insecure/stackguarded/sg{1..5}.c
          
          mkdir /home/gr0k/numeric
          wget -P /home/gr0k/numeric https://git.cybbh.space/samuel.c.thode/ninja/raw/master/Insecure/numeric/n{1..5}.c
          
          cat << 'EOF' > /home/compile.sh
          #!/bin/bash
          dirs=$(ls -d -1 /home/gr0k/**)
          
          for dir in $dirs; do
            files=$(ls $dir);
            for file in $files; do
                name=$(echo $file | cut -f 1 -d '.')
                
                # check if directory exists, if not, make it
                if [ ! -d $dir/bin ]; then
                    mkdir $dir/bin
                fi
                
                # gcc -fno-stack-protector -g -o   <filename>   <source code location>
                $(gcc -fno-stack-protector -g -o $dir/bin/$name $dir/$file)
            done
          done
          
          EOF
          
          chmod +x /home/compile.sh
          chown gr0k:gr0k /home/compile.sh
          ./home/compile.sh
          
          chown -R gr0k:gr0k /home/gr0k/*
          
          echo 0 > /proc/sys/kernel/randomize_va_space
          
          reboot
      user_data_format: RAW
    type: OS::Nova::Server  
